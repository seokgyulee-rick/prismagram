type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value: "")
  lastName: String
  bio: String
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
}

type Post {
  files: [File!]!
  location: String
  caption: String!
  user: User!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  user: User!
  post: Post!
}
type Comment {
  text: String!
  user: User!
  post: Post!
}
type File {
  url: String!
  post: Post!
}
